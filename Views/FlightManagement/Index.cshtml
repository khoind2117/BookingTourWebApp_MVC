@model IEnumerable<BookingTourWebApp_MVC.ViewModels.FlightViewModel>

@{
    ViewData["Title"] = "Quản lý chuyến bay";
    Layout = "_LayoutAdminManagement";
}

<style>
    th {
        text-align: center;
        text-wrap: wrap;
    }
    .form-label {
        width: 40%
    }
    .form-input {
        width: 60%
    }
    table {
        /*align-items: center;*/
        vertical-align: bottom;
        align-items:center;
        /*border:1px solid black;
        box-shadow: 0px 0px 0px 8px rgba(0,0,0,0.3);*/
    }
    table tr td {
        /*align-items: center;*/
        justify-content: center;
        align-items: center;
        text-align:center;
        vertical-align: middle;
    }
    form div {
        margin: 20px auto;
        display: flex;
        width:50%;
        justify-content:center
    }
    td a {
        background-color: #19A7CE;
        border: 1px solid #19A7CE;
        color: white;
        width: 50px;
        padding: 5px;
        border-radius: 10px;
        transition: 0.3s;
        text-decoration:none
    }
    td a:hover {
        background-color: white;
        border: 1px solid #19A7CE;
        color: #19A7CE;
        cursor: pointer;
        width: 50px;
        padding: 5px;
        border-radius: 10px;
        text-decoration:none
    }
</style>

<div style="display:flex; flex-direction:column;margin: 0 auto; margin-top: 3%; border: 1px solid black;border-radius:15px;width:70%">
    <form asp-action="Index" asp-controller="FlightManagement" method="get">
    <div>
        <label for="id" class="form-label">Ngày xuất phát: </label>
        <input name="departureTime" id="departureTime" type="date" class="form-input"/>
    </div>
    <div>
        <label for="departure" class="form-label">Nơi xuất phát: </label>
        <select name="departure" id="departure" class="form-input">
            <option value=""></option>
            <option value="Nha Trang">Nha Trang</option>
            <option value="Sài Gòn">Sài Gòn</option>
            <option value="Đà Nẵng">Đà Nẵng</option>
            <option value="Cà Mau">Cà Mau</option>
            <option value="Hà Nội">Hà Nội</option>
            <option value="Vinh">Vinh</option>
            <option value="Hội An">Hội An</option>
            <option value="Đà Lạt">Đà Lạt</option>
            <option value="Bắc Ninh">Bắc Ninh</option>
        </select>
    </div>

    <div>
        <label for="destination" class="form-label">Nơi đến: </label>
        <select name="destination" id="destination" class="form-input">
            <option value=""></option>
            <option value="Nha Trang">Nha Trang</option>
            <option value="Sài Gòn">Sài Gòn</option>
            <option value="Đà Nẵng">Đà Nẵng</option>
            <option value="Cà Mau">Cà Mau</option>
            <option value="Hà Nội">Hà Nội</option>
            <option value="Vinh">Vinh</option>
            <option value="Hội An">Hội An</option>
            <option value="Đà Lạt">Đà Lạt</option>
            <option value="Bắc Ninh">Bắc Ninh</option>
        </select>
    </div>
    <div>
        <label for="id" class="form-label">Mã chuyến: </label>
        <input name="id" id="id" class="form-input"/>
    </div>
    
    <button style="margin-left:45%; margin-bottom:20px; padding:7px 20px; border: 2px black solid; border-radius:15px">Tìm</button>
    <br />
</form>
</div>
<p style="margin: 20px 0px">
    <a asp-action="Create" class="btn btn-primary" style="background-color:#146C94">Thêm chuyến bay</a>
</p>
<table class="table" style="border-color:black">
    <thead>
        <tr>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.PlaneId)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.PlaneName)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.Destination)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.BusinessCapacity)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.EconomyCapacity)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.DepartureTime)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.BusinessPrice)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.EconomyPrice)
            </th>
            <th style="background-color:#19A7CE;color:white">
                @Html.DisplayNameFor(model => model.UploadTime)
            </th>
            <th style="background-color:#19A7CE;color:white"></th>
            <th style="background-color:#19A7CE;color:white"></th>
            <th style="background-color:#19A7CE;color:white"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td >
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlaneName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departure)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EconomyCapacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartureTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EconomyPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UploadTime)
            </td>
            <td style="white-space:nowrap">
                <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
            </td>
            <td style="white-space:nowrap">
                <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
            </td>
            <td style="white-space:nowrap">
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
