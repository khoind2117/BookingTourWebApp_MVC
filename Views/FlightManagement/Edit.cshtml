@model BookingTourWebApp_MVC.ViewModels.FlightViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa thông tin chuyến bay</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" id="myForm" onsubmit="editAlert(event)">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlaneId" class="control-label"></label>
                <select asp-for="PlaneId" asp-items="@(new SelectList(ViewBag.planeList, "Id", "Name"))" id="planeIdSelect">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Departure" class="control-label"></label>
                <select asp-for="Departure" class="form-control">
                    <option value=""></option>
                    <option value="Nha Trang">Nha Trang</option>
                    <option value="Sài Gòn">Sài Gòn</option>
                    <option value="Đà Nẵng">Đà Nẵng</option>
                    <option value="Cà Mau">Cà Mau</option>
                    <option value="Hà Nội">Hà Nội</option>
                    <option value="Vinh">Vinh</option>
                    <option value="Hội An">Hội An</option>
                    <option value="Đà Lạt">Đà Lạt</option>
                    <option value="Bắc Ninh">Bắc Ninh</option>
                </select>
                <span asp-validation-for="Departure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <select asp-for="Destination" class="form-control">
                    <option value=""></option>
                    <option value="Nha Trang">Nha Trang</option>
                    <option value="Sài Gòn">Sài Gòn</option>
                    <option value="Đà Nẵng">Đà Nẵng</option>
                    <option value="Cà Mau">Cà Mau</option>
                    <option value="Hà Nội">Hà Nội</option>
                    <option value="Vinh">Vinh</option>
                    <option value="Hội An">Hội An</option>
                    <option value="Đà Lạt">Đà Lạt</option>
                    <option value="Bắc Ninh">Bắc Ninh</option>
                </select>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessCapacity" class="control-label"></label>
                <input asp-for="BusinessCapacity" class="form-control" />
                <span asp-validation-for="BusinessCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EconomyCapacity" class="control-label"></label>
                <input asp-for="EconomyCapacity" class="form-control" />
                <span asp-validation-for="EconomyCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessPrice" class="control-label"></label>
                <input asp-for="BusinessPrice" class="form-control" />
                <span asp-validation-for="BusinessPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EconomyPrice" class="control-label"></label>
                <input asp-for="EconomyPrice" class="form-control" />
                <span asp-validation-for="EconomyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadTime" class="control-label"></label>
                <input asp-for="UploadTime" class="form-control" />
                <span asp-validation-for="UploadTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu chỉnh sửa" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Danh sách chuyến bay</a>
</div>

@section Scripts {
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
    <script>
        function editAlert(e){
            e.preventDefault();

            Swal.fire({
                title: "Chỉnh sửa thông tin chuyến bay này?",
                text: "Bạn có chắc chắn muốn chỉnh sửa thông tin chuyến bay này không?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Đồng ý",
                cancelButtonText: "Hủy"
            }).then(result => {
                if (result.isConfirmed) {
                    const myForm = document.getElementById('myForm');
                    myForm.submit();
                }
            });
        }
    </script>
}