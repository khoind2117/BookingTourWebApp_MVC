@using FlightBooking.ViewModel;
@using Microsoft.AspNetCore.Identity;
@model ExternalLoginViewModel

<h1>Đăng ký</h1>
<h3>Bạn đang đăng ký bằng tài khoản @ViewData["ProviderDisplayName"].</h3>

<form asp-controller="Account" asp-action="ExternalLoginConfirmation" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
    <h4>Hãy thêm thông tin của bạn</h4>
    <div class="form-group mb-2">
        <label asp-for="FullName">Họ và tên</label>
        <input asp-for="FullName" class="form-control">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="PhoneNumber">Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </div>
    </div>
</form>