@model IEnumerable<BookingTourWebApp_MVC.ViewModels.VMofStatistical.StatisticalFlightSales>

@{
    ViewData["Title"] = "StatisticalSortDESC";
}

<div style="margin-block:20px">
    <h2 style="color:#146C94;font-weight:bold">Doanh thu các chuyến bay được sắp xếp tăng dần:</h2>
</div>
<div>
    <table class="table table-striped table-bordered" style="border-radius:12px;overflow:hidden;">
        <thead style="background-color:#146C94">
            <tr style="text-align:center;color:#F6F1F1">
                <td>
                    @Html.DisplayNameFor(Model => Model.flightId)
                </td>
                <td>
                    @Html.DisplayNameFor(Model => Model.Sales)


                </td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="text-align:center;text-decoration:none;">
                    <td>
                        @Html.DisplayFor(modelItem => item.flightId)
                    </td>
                    <td>

                        @string.Format("{0:#,##0} đ", item.Sales)
                    </td>

                </tr>
            }
        </tbody>

    </table>

</div>
<br />


