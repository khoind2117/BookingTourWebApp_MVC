                <td>
                    @Html.DisplayNameFor(Model => Model.HighSales.First().economyPrice)
                </td>
                <td>
                    @Html.DisplayNameFor(Model => Model.HighSales.First().Sales)
                </td>



            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model.HighSales)
